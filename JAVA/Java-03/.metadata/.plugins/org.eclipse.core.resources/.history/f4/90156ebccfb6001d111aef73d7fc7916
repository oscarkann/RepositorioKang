        byte centigrados = 1;
        double fahrenheit = (centigrados * 1.8) + 32;
        double kelvin = centigrados + 273.15;

        System.out.println("1 centigrado a fahrenheit es: " + fahrenheit);

        System.out.println("1 centigrado a kelvin es: " + kelvin);

